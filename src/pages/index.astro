---
import Layout from "../layouts/Layout.astro";

import myFace from "../assets/neil.png";
import hurl from "../assets/hurl.webp";
import bonavoy from "../assets/bonavoy.webp";
import ladybird from "../assets/ladybird.webp";
import codeedit from "../assets/codeedit.webp";
import { Image } from "astro:assets";
import "../styles/global.css";
import Header from "@components/Header.astro";
import Card from "@components/Card.astro";
import Footer from "@components/Footer.astro";
import { ArrowRight } from "@lucide/astro";
import Links from "@components/Links.astro";
import Resume from "@components/Icons/Resume.astro";
import Tabs from "@components/Tabs/Tabs.astro";
---

<Layout>
  <div class="m-auto max-w-3xl px-4">
    <Header />

    <main>
      <section
        class="pt-16 pb-12 flex justify-between gap-16 flex-col-reverse md:flex-row"
      >
        <div>
          <div class="pb-4">
            <div class="flex items-center pb-2">
              <h1
                class="font-title text-5xl"
                style="font-size: var(--text-5xl); line-height: var(--text-5xl--line-height);"
              >
                hi, neil here.
              </h1>
              <div class="animate-wiggle text-5xl">ðŸ‘‹</div>
            </div>
            <p>Software Engineer at PLACE based in Canada ðŸ‡¨ðŸ‡¦</p>
          </div>

          <p>
            I specialize in distributed systems, infrastructure observability,
            and backend development.
          </p>

          <div class="pt-4">
            <div>Letâ€™s connect â€” Iâ€™m always up for a conversation</div>
            <div class="text-[12px]">
              For formal opportunities, email works best.
            </div>
          </div>

          <div class="pt-6">
            <div class="flex gap-4 items-center">
              <a href="/Neilzon_Viloria_2025.pdf" target="_blank">
                <button
                  class="flex items-center gap-4 border border-accent rounded-md px-4 py-1 cursor-pointer"
                >
                  <span>Resume</span>
                  <Resume />
                </button>
              </a>

              <Links />
            </div>
          </div>
        </div>

        <div>
          <Image
            src={myFace}
            alt="Neil Viloria"
            class="rounded-md object-cover w-max-[270]"
            loading="eager"
            decoding="async"
            width="280"
            height="350"
          />
        </div>
      </section>

      <section class="pb-16">
        <Tabs />
      </section>

      <section class="pb-16">
        <div class="flex justify-between items-center pb-8">
          <h2 class="font-title text-3xl">featured projects</h2>
          <a
            href="/projects"
            class="text-secondary flex items-center gap-1 py-2"
          >
            <span class="text-sm">view more</span>
            <ArrowRight size={20} />
          </a>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <Card
            imgSrc={bonavoy}
            title="Bonavoy"
            description="A real-time collaborative travel planner"
            tags={["nextjs", "GraphQL", "Tailwind", "TypeScript"]}
            source="https://github.com/Bonavoy"
          />
          <Card
            imgSrc={hurl}
            title="hurl"
            description="Postman-style HTTP workflows in your terminal"
            tags={["Go"]}
            source="https://github.com/neil-ptr/hurl"
          />
        </div>
      </section>

      <section class="pb-16">
        <div class="flex justify-between items-center pb-8">
          <h2 class="font-title text-3xl">open source work</h2>
          <a
            href="/projects"
            class="text-secondary flex items-center gap-1 py-2"
          >
            <span class="text-sm">view more</span>
            <ArrowRight size={20} />
          </a>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <Card
            imgSrc={ladybird}
            title="LadyBird"
            description="Implemented CSS Grid spacing per W3C spec, built devtools for debugging."
            tags={["Swift", "SwiftUI", "AppKit", "C++", "Qt"]}
            link="https://ladybird.org/"
            source="https://github.com/LadybirdBrowser/ladybird"
          />

          <Card
            imgSrc={codeedit}
            title="Code Edit"
            description="Added drag-and-drop support to the file tree and fixing a bug in the settings window."
            tags={["Swift", "SwiftUI", "AppKit"]}
            link="https://www.codeedit.app/"
            source="https://github.com/CodeEditApp/CodeEdit"
          />
        </div>
      </section>

      <Footer />
    </main>
  </div>
</Layout>
